<% else %>
	<div class="hero-unit">
		<div class="row-fluid">
			<h1>Welcome to Twitterer.</h1>
			<div class="offset1">
				<p>A microblogging platform built with Rails.</p>
				<p>Since Thu May 23 07:00:08 2013 -0400!</p>
			</div>
